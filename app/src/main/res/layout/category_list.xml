<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/btn_keyboard"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Keyboard"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_mouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_mouse"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Mouse"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_headphones"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Headphones"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_mousepad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_keyboard" />

    <Button
        android:id="@+id/btn_mousepad"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Mousepad"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_mouse" />

    <Button
        android:id="@+id/btn_earphones"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Earphones"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_monitor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_headphones" />

    <Button
        android:id="@+id/btn_monitor"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Monitor"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_mousepad" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginBottom="192dp"
        android:gravity="center"
        android:onClick="doBack"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>