<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/btn_cpu"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="CPU"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_motherboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_motherboard"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Motherboard"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_powsupply"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="Power Supply"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_gpu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_cpu" />

    <Button
        android:id="@+id/btn_gpu"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="GPU"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_motherboard" />

    <Button
        android:id="@+id/btn_case"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:text="PC Case"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_ram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_powsupply" />

    <Button
        android:id="@+id/btn_ram"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="RAM"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_gpu" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:onClick="doBack"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>